<!DOCTYPE html>
<html class="no-js"
    {% if page is defined and page.getCurrentLanguage() is not empty %}
    lang="{{ page.getCurrentLanguage().getCode() }}"
    dir="{{ page.getCurrentLanguage().getDirection() }}"
    {% endif %}>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>{% block title %}{% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="referrer" content="no-referrer"/>
    <meta name="robots" content="noindex, nofollow, noarchive">

    {% block meta_tags %}{% endblock %}

    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">

    <style type="text/css">
        .form-horizontal .has-feedback .form-control-feedback {
            right: 0;
        }

        #customer_phone {
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .modal .close {
            font-size: 10rem !important;
        }

        .pa-subs-icon-container .pa-subs-icon {
            width: auto !important;
        }

        .pa-subs-btn-link {
            background-color: #5B9B51;
        }

        .pa-powered-by-txt {
            display: none !important;
        }

        label.maxwidth {
            width: 100%;
        }

        .form-checkbox {
            cursor: pointer;
        }

        .form-checkbox .big-checkbox {
            margin-top: 5px;
        }

        .form-checkbox span {
            font-size: 13px;
        }

        .customer_submit_btn {
            margin-top: 7px;
        }

        .top-bar p, .top-bar a {
            color: rgb(160, 156, 156);
            font-size: 8px !important;
        }

        .top-bar p {
            text-align: center !important;
        }
        .top-bar p {
            padding-left: 5px !important;
            padding-right: 5px !important;
        }

        @media (min-width: 767px) {
            .top-bar p, .top-bar a {
                font-size: 11px !important;
                color: rgb(134, 129, 129);
            }
        }

        #free_e_link {
            text-decoration: underline !important;
            color: inherit !important;
        }

        .background-footer {
            padding-top: 25px !important;
            padding-bottom: 15px !important;
        }

        .caf_cont {
            text-align: center;
            padding-bottom: 15px !important;
            padding-top: 5px !important;
        }

        .caf_cont a {
            color: #3191f9 !important;
            font-size: 15px;
            text-decoration: underline;
        }

        .footer-col {
            padding-bottom: 15px;
        }

        .sweet-alert.showSweetAlert.visible > p {
            font-size: 25px;
        }

        .promotion-disclaimer {
            text-align: center;
            font-size: 18px !important;
            padding-bottom: 20px;
            padding-top: 15px;
        }

        #payment-please-wait-container {
            width: 100%;
            text-align: center;
        }

        .termslink {
            cursor: pointer;
        }

        {% if page is defined and page.getCustomCss() is defined %}
        {{ page.getCustomCss() }}
        {% endif %}
    </style>

    {% block stylesheets %}{% endblock %}
    {% block form_input_styles %}{% endblock %}

    <!-- Polyfill -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>

    <!-- web libs -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js" type="text/javascript"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"
            type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/webfont/1/webfont.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>
<body {% if page is defined and page.getCurrentLanguage() is not empty %}
    class="lang-code-{{ page.getCurrentLanguage().getCode() }} lang-dir-{{ page.getCurrentLanguage().getDirection() }}"
    {% endif %}>
{% block header %}{% endblock %}

<div id="layout-body">
    {% block body %}{% endblock %}
</div>

{% block footer_boxes %}{% endblock %}

{% block footer %}{% endblock %}

{% block terms_and_conditions_modals %}{% endblock %}

{% block bootstrap_js %}
    <script src="{{ asset('bootstrap400/js/bootstrap.min.js') }}"></script>
{% endblock %}


{% block bootstrap_js_validator %}
    <script src="{{ asset('assets/vendor/bootstrap-validator/dist/validator.min.js') }}"></script>
{% endblock %}

<!-- Web Shims -->
<script src="{{ asset('assets/vendor/webshim/js-webshim/minified/polyfiller.js') }}"></script>
<script>
    webshims.polyfill();
</script>

{% block javascripts %}{% endblock %}

{% block landing_layout_js %}{% endblock %}
{% block form_input_scripts %}{% endblock %}

{# Affiliate Pixel Postback #}
{% block tracking_scripts %}{% endblock %}
</body>
</html>
