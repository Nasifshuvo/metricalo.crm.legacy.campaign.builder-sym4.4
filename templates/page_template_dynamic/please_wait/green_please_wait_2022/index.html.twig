{% extends 'page_template/please_wait/please_wait_layout.html.twig' %}

{% trans_default_domain "awaiting_confirmation" %}

{% block stylesheets %}
    {{ parent() }}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
    crossorigin="anonymous">

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap');

    :root {
      --text: #130F26;
      --primary: #59c048;
    }

    .text-primary-blue {
      color: #59c048; !important;
    }

    body {
      font-family: 'Poppins', sans-serif;
      color: var(--text);
    }

    .row {
      height: 100vh;
      background: url({{ pageTheme.getImage('illustration') }});
      background-size: 40%;
      background-position: 52% 17%;
      background-repeat: no-repeat;
    }

    h1 {
      font-weight: 700;
      font-size: 40px;
      line-height: 150%;
    }

    p {
      font-weight: 500;
      font-size: 14px;
      line-height: 170%;
      color: #807E89;
    }

    .image {
      height: 100px;
      margin-bottom: 60px;
    }
  </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
 <div class="container-fluid text-center page">
    <div class="row align-middle align-items-center">
      <div class="col-sm-10 offset-sm-1 col-xl-4 offset-xl-4">
        <img src="{{ pageTheme.getImage('animation') }}" class="image img-fluid loading">
        <h1>
          <span class="text-primary-blue loading">{{ pageText.get('Please wait') }}</span>
        </h1>
        <p>
          <div id="primary-message" class="verified">
              <p class="success-msg">{{ pageText.get('We are processing your order.') }}</p>
              <p class="error-msg" style="display: none;">{{ 'an_error_occured_click_here_to_try_again'|trans({'%a_start%': '<a href="'~ path('app.front.order.new', {'error': '1'}) ~'">', '%a_end%': '</a>'})|raw }}</p>
          </div>
        </p>
      </div>
    </div>
  </div>
{% endblock %}
