  body{
        overflow-x: hidden
    }

    .header {
        background-color:#17161a;
        display: flex;
        justify-content: center;
    }

    .section {
        background-color: #f1f4f8; 
        background-image: url("");
    }
    .pricing {
        color: #000;
        background-color: #f6f6f6;
    }
    .pricing-title {
        background: #000000;;
    }

    .pricing-list::before, .pricing-list::after {
        background: #193032;
    }

    .form {
        color: #000;
        background-color: #EFEFEF;
    }
    .termslink {
        color: #aaa;
    }
    .termslink:hover {
        color: #aaa;
    }
    .fourth {
        background-color: #161c2d;
        color: #fff;
    }
    .fourth .text-bold {
        color: #fff;
    }
    footer {
        background-color: #161c2d;
        color: #000;
    }
    .btn-success {
        color: #275720;
        background-color: #0278cb;
        border-color: #0278cb;
    }
    .btn-success:focus.btn-success:active,
    .btn-success:hover,
    .btn-success:focus {
        color: #0278cb;
        background: #275720;
        border-color: #0278cb;
    }
    .pricing-interval div {
        padding: 16px 8px;
        font-size: 15px;
    }

    .curreny-HUF {
        font-size: 32px;
        margin: 15px 0 10px;
    }

    .curreny-BGN {
        font-size: 38px;
        margin-top: 14px;
    }

    .pricing-value {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .pricingContent {
        position: absolute;
        top: 0;
        padding: 40px 31px;
    }

    .moving-label {
        font-size: 12px;
        font-weight: 400;
    }

    #customer_submit_btn {
      
        font-weight: 200;
        border-radius: 0;
        max-width: 300px;
        width: 100%;
        transition: all .3s ease-in-out;
        font-size: 16px;
        color: #fff;
        padding: 8px 14px;
        border: 1px solid #43FFF4;
        text-transform: uppercase;
        transition: all 0.4s ease-in-out;
        background-color: #43FFF4;

        }

    #customer_submit_btn:hover{
       background-color: #fff;
        color: #9e50fc;
        border: 1px solid #9e50fc;
    }

    footer p {
        color: #ffffff;
    }
    .footer_main p{
        color: white;
        padding: 15px;
    }

    .footer_main{
        background-color: #17161a;
        color: #000;
    }

    .fade{
        opacity: 1;
    }
