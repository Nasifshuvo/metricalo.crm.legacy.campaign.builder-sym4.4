{% extends 'page_template/thank_you/thank_you_layout.html.twig' %}

{% trans_default_domain "thankyou" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
        crossorigin="anonymous"
    >

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap');

    :root {
      --text: #130F26;
      --primary: #255BE7;
    }

    .text-primary {
      color: var(--primary)
    }

    body {
      font-family: 'Poppins', sans-serif;
      color: var(--text)
    }

    .row {
      height: 100vh;
      background: url("{{ pageTheme.getImage('illustration') }}");
      background-size: 23%;
      background-position: 49% 20%;
      background-repeat: no-repeat;
    }

    h1 {
      font-weight: 700;
      font-size: 40px;
      line-height: 150%;
    }

    h2 {
      font-weight: 500;
      font-size: 20px;
      line-height: 150%;
    }

    p {
      font-weight: 500;
      font-size: 14px;
      line-height: 170%;
      color: #807E89;
    }

    img {
      height: 200px;
      width: 200px;
    }
  </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container-fluid text-center">
    <div class="row align-middle align-items-center">
      <div class="column col-sm-10 offset-sm-1 col-xl-4 offset-xl-4">
        <img src="{{ pageTheme.getImage('animation') }}" class="img-fluid">
        <h1>
          Thank you
        </h1>
        <h2 class="p-3">
            {{ pageText.get('Thank you for your order with %website_domain%!') }}
            <br>
            {{ pageText.get('%descriptor% will be displayed on your card statement.') }}
            <br>
            {% if order_redirect is not null %}
                <br>
                <p>{{ 'you_will_be_redirected_in_%count%_seconds'|trans|replace({'%count%': '<span id="counter">'~redirect_seconds~'</span>'})|raw }}</p>
            {% endif %}
        </h2>
      </div>
    </div>
  </div>
{% endblock %}
